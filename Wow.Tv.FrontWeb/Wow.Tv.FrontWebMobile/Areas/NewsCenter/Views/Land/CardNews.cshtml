
@{
    Layout = null;
}

@if (Model != null)
{
    foreach (var item in Model)
    {
        <li>
            <div class="img-area no-media">
                <a href="javascript:NewsCommon.GoNewsDetailView('card','','','@item.ARTICLEID')">
                    <span class="notice-area">
                        <!-- 알림표시할 경우 a태그에 span.notice-area 추가 -->
                        @if (item.SECTION_NAME != null)
                        {
                            <span class="text-icon type02">@item.SECTION_NAME</span>
                        }
                    </span>
                    <img src="@Wow.WowExtensionMethod.NewsThumbnailPath("11B", item.THUMBNAIL_FILENM, null, item.IMAGE_DIR, item.IMAGE_FILE, item.ARTDATE)" onerror="this.src='@Wow.WowExtensionMethod.NewsThumbnailOnError("11B")'" alt="@item.TITLE">
                </a>
            </div>
        </li>
    }
}
