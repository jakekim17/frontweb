
@{
    Layout = null;
    string wowTvScript = AppState["WowTvScript"].ToString();
}

<div class="tab-cont on">
    <!-- 종합 start -->
    <div class="box-img-02">
        @if (Model.NewsTotalCountList != null && Model.NewsTotalCountList.Count > 0)
        {
            foreach (var item in Model.NewsTotalCountList)
            {
                <a href="javascript:NewsCommon.GoNewsRead('@item.ARTICLEID')" class="manyTotalArt" @(Model.NewsTotalCountList.IndexOf(item) < 5 ? "" : "style=display:none;")>
                    <div class="img-area">
                        @if (!String.IsNullOrEmpty(item.IMAGE_FILE))
                        {
                            <img alt="" src="@Wow.WowExtensionMethod.NewsThumbnailPath("16M", item.THUMBNAIL_FILENM, item.VOD_NUM, item.IMAGE_DIR, item.IMAGE_FILE, item.ARTDATE)" onerror="this.src='@Wow.WowExtensionMethod.NewsThumbnailOnError("16M")'">
                        }

                    </div>
                    <p class="txt">@item.TITLE</p>
                </a>
            }
        }
        else
        {
            <a href="javascript:void(0)">
                등록된 내용이 없습니다.
            </a>
        }
    </div>
    <div class="btn-area" id="btnManyTotal">
        <a href="javascript:void(0)" class="btn type06"><span class="ico-arrow">더보기</span></a>
    </div>
    <!--// 종합 end -->
</div>
<div class="tab-cont">
    <div class="box-img-02">
        @if (Model.NewsEntSpoCountList != null && Model.NewsEntSpoCountList.Count > 0)
