@using Wow

@{
    Layout = null;
}

@if (Model != null && Model.Count > 0)
{
    <div>
        <a href="javascript:NewsCommon.GoNewsRead('@Model[0].ARTICLEID')">
            <strong>@Model[0].TITLE</strong>
            <p>@WowExtensionMethod.RemoveTag(Model[0].CONTENTS_CUT)</p>
        </a>
    </div>
    <ul>
        @for (var i = 1; i < Model.Count; i++)
        {
            <li>
                <a href="javascript:NewsCommon.GoNewsRead('@Model[i].ARTICLEID')">
                    @WowExtensionMethod.NewsGugunIcon(Model[i].GUBUN_NAME)
                    @Model[i].TITLE
                </a>
            </li>
        }
    </ul>
}
