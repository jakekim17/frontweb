        <span class="btn-type4"><a href="#" onclick="return BroadWatchPlayInfo.OpenVod(@Model.Num);">방송 새창보기</a></span>
    </div>
    <!-- //날자 영역 -->
    <div class="text" id="broadWathTxt">
