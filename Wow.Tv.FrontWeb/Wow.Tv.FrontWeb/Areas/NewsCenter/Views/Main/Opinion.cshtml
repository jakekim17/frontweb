@using Wow
@using Wow.Tv.Middle.Model.Common
@using Wow.Tv.Middle.Model.Db49.Article

@model List<NUP_NEWS_MAIN_OPINION_SELECT_Result>

@{
    Layout = null;

    string wowTvStyle = AppState["WowTvStyle"].ToString();
    string wowTvScript = AppState["WowTvScript"].ToString();
    string uploadWebPathRoot = AppState["UploadWebPathRoot"].ToString();
    string uploadPlanArticlePath = AppState["UploadPlanArticlePath"].ToString();

    string opinionUploadPath = uploadWebPathRoot + uploadPlanArticlePath;
}

@if (Model != null)
{
    foreach (var item in Model)
    {
        <li style="cursor:pointer;" onclick="return NewsCommon.GoNewsDetailView('opinion', '', '@item.CLASS', '@item.ARTICLEID')">
            <span class="photo"><img src="@(opinionUploadPath + item.COLUMNLIST_PHOTO)" alt="" onerror="this.src='@WowExtensionMethod.NoImageProfile("82")'"></span>
            <dl>
                <dt>@item.TITLE</dt>
                <dd class="cont">@WowExtensionMethod.RemoveTagAndReplace(MvcHtmlString.Create(item.CONTENTS).ToString(), 120, true)</dd>
                <dd>@item.COLUMN_GUBUN @item.COLUMNLIST_NAME</dd>
            </dl>
        </li>
    }
}
else
{
    <li>등록된 내용이 없습니다.</li>
}