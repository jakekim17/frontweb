@using Wow.Tv.Middle.Model.Db22.stock
@using Wow.Tv.Middle.Model.Common
@using Wow.Tv.FrontWebMobile.Areas.Finance.Helpers
@model ListModel<usp_wownet_ETF_stock_group_Result>
@{
    ViewBag.Title = "ETF";
}

<section class="container">
    <!-- title area -->
    <div class="section-area">
        <h2>ETF</h2>
    </div>
    <!-- // title area -->
    <div class="section-area">
        <!-- 테이블-->
        <div class="table-type1 type02 line">
            <table>
                <caption>관심종목 상세</caption>
                <colgroup>
                    <col style="width:auto">
                </colgroup>
                <tbody>
                    @foreach(var item in Model.ListData)
                    {
                        <tr>
                            <td class="txt-l">@item.korName</td>
                            <td>@item.TradePrice</td>
                            <td>@Html.PublishChgPriceFormat(item.ChgType, item.ChgPrice)</td>
                            <td>@Html.PublishUpDownSymbolPChangeFormat(item.ChgType, item.ChgRate)</td>  
                        </tr>
                    }
                   
                </tbody>
            </table>
        </div>
        <!-- // 테이블 -->
    </div>
</section>
