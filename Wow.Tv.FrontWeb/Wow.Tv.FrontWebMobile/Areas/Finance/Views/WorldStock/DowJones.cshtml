<script>
        $(document).ready(function () {
            
            FinanceChartJs.UsaTimeChartData("D", "D", $(".chart-view"));

            $("#dowTab a").on('click', function () {
                //alert("테스트");
                $(this).parent('li').addClass('on').siblings().removeClass('on');
                var idVal = $(this).attr("id");
                if (idVal == "dowTime") {
                    WorldStockDowJones.SiseTimeDowJonesList(0);
                } else if (idVal == 'dowDay') {
                    WorldStockDowJones.SiseDayDowJonesList(0);
                } else if (idVal == 'dowEnroll') {
                    WorldStockDowJones.SiseEnrollmentDowJonesList(0);
                }

            });
            WorldStockDowJones.SiseTimeDowJonesList(0);
        });
</script>


<div class="stock-index">
    <div class="box">
        <dl class="stock-area">
            <dt>다우지수</dt>
            @Html.PublishPriceFormat2(Model.chgtype, Model.Price)
        </dl>
        <ul class="stock-box">
            <li>@Html.PublishChgPriceFormat(Model.chgtype, Model.ChgPrice)</li>
            <li>@Html.PublishUpDownSymbolPChangeFormat(Model.chgtype, Model.chgRate)</li>
        </ul>
    </div>
    <!-- 테이블-->
    <div class="table-type1 type01">
        <table>
            <caption>상세</caption>
            <colgroup>
                <col style="width:25%">
                <col style="width:25%">
                <col style="width:25%">
                <col style="width:*">
            </colgroup>
            <tbody>
                <tr>
                    <td class="txt-l">고가</td>
                    <td class="txt-r"><strong class="num font-color04">@Model.MaxPrice</strong></td>
                    <td class="txt-l">거래량</td>
                    <td class="txt-r"><strong class="num">@Model.OpenPrice</strong></td>
                </tr>
                <tr>
                    <td class="txt-l">저가</td>
                    <td class="txt-r"><strong class="num font-color05">@Model.MinPrice</strong></td>
                    <td class="txt-l">전일종가</td>
                    <td class="txt-r"><strong class="num">@Model.Vol</strong></td>
                </tr>
            </tbody>
        </table>
    </div>
    <!-- // 테이블 -->
</div>
