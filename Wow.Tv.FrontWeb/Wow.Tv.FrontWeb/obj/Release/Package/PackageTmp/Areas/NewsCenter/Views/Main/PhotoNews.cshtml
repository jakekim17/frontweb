@{
    Layout = null;
}

@if (Model != null && Model.Count > 0)
{
    var photoCnt = (Model.Count / 2);
    foreach (var item in Model)
    {
        <li class="swiper-slide btnGoNewsPhotoView @(Model.IndexOf(item) == photoCnt ? "onPhoto" : "")" id="@item.ARTICLEID">
            <a href="javascript:void(0)">
                <dl>
                    <dt>
                        @item.TITLE
                    </dt>
                    <dd>
                        <span class="photo">
                            <img src="@Wow.WowExtensionMethod.NewsThumbnailPath("34M", item.THUMBNAIL_FILENM, item.VOD_NUM, item.IMAGE_DIR, item.IMAGE_FILE, item.ARTDATE)" alt="" onerror="this.src='@Wow.WowExtensionMethod.NewsThumbnailOnError("34M")'">
                        </span>
                    </dd>
                </dl>
            </a>
        </li>
    }
}
