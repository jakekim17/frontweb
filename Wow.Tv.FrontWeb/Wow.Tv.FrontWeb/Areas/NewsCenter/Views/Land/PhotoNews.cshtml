@using Wow
@{
    Layout = null;
}


@if (Model != null && Model.Count > 0)
{
    var photoCnt = (Model.Count / 2);
    foreach (var item in Model)
    {
        <li id="@item.ARTICLEID" class="swiper-slide btnGoNewsPhotoView @(Model.IndexOf(item) == photoCnt ? "onPhoto" : "")">
            <a href="javascript:void(0)">
                <dl>
                    <dt>
                        @item.TITLE
                    </dt>
                    <dd>
                        <span class="photo">
                            <img src="@WowExtensionMethod.NewsThumbnailPath("34M", item.THUMBNAIL_FILENM, item.VOD_NUM, item.IMAGE_DIR, item.IMAGE_FILE, item.ARTDATE)" onerror="this.src='@WowExtensionMethod.NewsThumbnailOnError("34M")'" alt="">
                        </span>
                    </dd>
                </dl>
            </a>
        </li>
    }
}
else
{
    <li>등록된 내용이 없습니다.</li>
}

