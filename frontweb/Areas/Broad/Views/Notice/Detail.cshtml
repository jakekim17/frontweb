@using Wow.Tv.Middle.Model.Db49.wowtv

@model NTB_BOARD_CONTENT

@{
    Layout = null;

    string wowTvScript = AppState["WowTvScript"].ToString();
}


<script src="@wowTvScript/Broad/Notice/Detail.js?date=20171018170000"></script>




<!-- Content Area -->
<div class="contain-content">
    <!-- 좌측 영역 -->
    <div class="left-section">

        <form id="frmSearch">
            <input type="hidden" id="SearchType" name="SearchType" value="@ViewBag.Condition.SearchType" />
            <input type="hidden" id="SearchText" name="SearchText" value="@ViewBag.Condition.SearchText" />
            <input type="hidden" id="pageSize" name="pageSize" value="@ViewBag.Condition.PageSize" />
            <input type="hidden" id="currentIndex" name="currentIndex" value="@ViewBag.Condition.CurrentIndex" />
            <input type="hidden" name="CurrentMenuSeq" id="CurrentMenuSeq" value="@ViewBag.Condition.CurrentMenuSeq" />
        </form>

        <!--  board view -->
        <div class="board-view">
            <!-- title -->
            <strong class="title">
                <span class="sub">
                    @*@foreach (var code in ViewBag.CommonCodes)
            {
                if (code.COMMON_CODE == Model.COMMON_CODE)
                {
                            @code.CODE_NAME
                        }
                    }*@
                </span>@Html.Raw(Model.TITLE)
            </strong>
            <!-- // title -->
            <!-- publisher -->
            <div class="user-data">
                <div class="right-box">
                    <span class="data">@Model.REG_DATE.ToString("yyyy-MM-dd")</span>
                    <span class="space"></span>
                    <strong class="tit">조회수</strong>
                    <span class="data">@Model.READ_CNT</span>
                </div>
            </div>
            <!-- publisher -->
            <!-- view area -->
            <div class="view-txt">
                <div class="view-img">@*<img src="../../images/customer/img_dummy.png" alt="">*@</div>
                <div class="view-detail">
                    @Html.Raw(Model.CONTENT)
                </div>
            </div>
            <!-- // view area -->
        </div>
        <!-- // board view -->
        <!-- btn area -->
        <div class="box-button">
            <div class="inner-right">
                <span class="btn-type1" id="btnList"><button>목록</button></span>
            </div>
        </div>

    </div>
    <!-- 우측 영역 -->
    <div class="right-section" id="divBanner">
    </div>
    <!-- // 우측 영역 -->
</div>
