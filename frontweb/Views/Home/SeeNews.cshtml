@using Wow.Tv.Middle.Model.Common
@using Wow.Tv.Middle.Model.Db49.Article
@using Wow

@{
    Layout = null;

    ListModel<NUP_NEWS_MAIN_CARD_SELECT_Result> list1 = ViewBag.List1;
    ListModel<NUP_NEWS_MAIN_VOD_SELECT_Result> list2 = ViewBag.List2;
}

@if (list1.ListData != null)
{
    foreach (var item in list1.ListData)
    {
        <li id="@item.ARTICLEID" class="swiper-slide seeNewsList">
            <a href="javascript:void(0)">
                <dl>
                    <dt>
                        @item.TITLE
                    </dt>
                    <dd>
                        <span class="photo">
                            <img src="@WowExtensionMethod.NewsThumbnailPath("11M", item.THUMBNAIL_FILENM, null, item.IMAGE_DIR, item.IMAGE_FILE, item.ARTDATE.Value)" onerror="this.src='@WowExtensionMethod.NewsThumbnailOnError("11M")'">
                        </span>
                    </dd>
                </dl>
            </a>
        </li>
    }
}
@if (list2.ListData != null)
{
    foreach (var item in list2.ListData)
    {
        <li id="@item.ARTICLEID" class="swiper-slide seeNewsList">
            <a href="javascript:void(0)">
                <dl>
                    <dt>
                        @item.TITLE
                    </dt>
                    <dd>
                        <span class="photo">
                            <img src="@WowExtensionMethod.NewsThumbnailPath("11M", item.THUMBNAIL_FILENM, null, item.IMAGE_DIR, item.IMAGE_FILE, item.ARTDATE)" onerror="this.src='@WowExtensionMethod.NewsThumbnailOnError("11M")'">
                        </span>
                    </dd>
                </dl>
            </a>
        </li>
    }
}

