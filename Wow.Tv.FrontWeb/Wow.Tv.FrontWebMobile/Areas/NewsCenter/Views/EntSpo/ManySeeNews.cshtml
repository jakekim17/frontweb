
@{
    Layout = null;
}
@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <a href="javascript:NewsCommon.GoNewsRead('@item.ARTICLEID')" class="manyNewsArt" @(Model.IndexOf(item) < 5 ? "" : "style=display:none;")>
            <div class="img-area">
                @if (!String.IsNullOrEmpty(item.IMAGE_FILE))
                {
                    <img src="@Wow.WowExtensionMethod.NewsThumbnailPath("16M", item.THUMBNAIL_FILENM, item.VOD_NUM, item.IMAGE_DIR, item.IMAGE_FILE, item.ARTDATE)" onerror="this.src='@Wow.WowExtensionMethod.NewsThumbnailOnError("16M")'" alt="">
                }
            </div>
            <p class="txt">@item.TITLE</p>
        </a>
    }
}
else
{
    <a href="javascript:void(0)">
        등록된 내용이 없습니다.
    </a>
}