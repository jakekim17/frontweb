@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>WOW NET</title>
</head>
<body>
    <div>
        <table cellspacing="0" cellpadding="0" class="error" summary="에러메시지">
            <tr>
                <td>
                    @{
                        if (ViewBag.ErrorType == "Normal")
                        {
                            <p>요청 경로를 찾을 수 없습니다.</p>
                        }
                        else if (ViewBag.ErrorType == "505")
                        {
                            <p>요청 경로를 찾을 수 없습니다.</p>
                            @ViewBag.ErrorDetail
                        }
                    }
                </td>
            </tr>
            <tr>
                <td>
                    @ViewBag.ErrorDetail
                </td>
            </tr>
            <tr>
                <td>메세지 : @ViewBag.ErrorMessage</td>
            </tr>
        </table>
    </div>
</body>
</html>