        @foreach (var item in hubBusinessList)
        {
            <li><a href="@item.HUB_URL" target="_blank"><img src="@(uploadWebPath + item.HUB_IMAGE.Replace("\\", "/"))" alt="@item.HUB_TITLE"></a></li>
        }
